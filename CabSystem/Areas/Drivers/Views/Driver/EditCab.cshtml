@model CabViewModel
@{
    ViewData["Title"] = "EditCab";
}

<h1>EditCab</h1>

<h4>CabViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditCab">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Vehicle" class="control-label"></label>
                <select asp-for="Vehicle" asp-items="@Html.GetEnumSelectList<VehicleType>()" class="form-control">
                    <option>--- Select vehicle type ---</option>
                </select>
                <span asp-validation-for="Vehicle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VechicleNumber" class="control-label"></label>
                <input asp-for="VechicleNumber" class="form-control" />
                <span asp-validation-for="VechicleNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Model" class="control-label"></label>
                <input asp-for="Model" class="form-control" />
                <span asp-validation-for="Model" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

